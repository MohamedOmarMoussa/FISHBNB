<div class="banner poisson_btnTarget" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.oobaooba.fr/img/post/21.jpg);">
  <div class="container ">
    <h1 class="home-h1" >La <strong>passion</strong> des <strong>poissons</strong>!</h1>
    <button class="btn poisson_btn mx-auto" type="button">
      <%= link_to "Découvre nos fabuleux poissons à louer !", poissons_path %>
    </button>
  </div>
</div>

<div class="cards">

  <% @poissons.each do |poisson| %>
    <%= link_to poisson_path(poisson), class:"home-a" do %>
      <div class="card grow" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url(<%= poisson.picture_url %>)">
        <div class="card-infos">
              <h2 class="home-h2" ><strong><%= poisson.name %></strong></h2>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
