<div class="confirmation-box">
  <div class="listing-price">
    <div class="form-group">
      <h4>€<%= @poisson.price %></h4>
      <p>par jour + les frais</p><br>

      <%= simple_form_for [@poisson, @location] do |f| %>
        <%= f.input :begin_date, as: :string, required: false, input_html: {class: "datepicker"} %>
        <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker"} %>

        <h5>Sous-total: <strong>€<%= @poisson.price %></strong></h5><br>

        <%= f.submit "Demander une réservation", class: "btn btn-success form-control" %>
        <br><br>
      <% end %>
    </div>
  </div>
</div>
