<div class="container mt-3">

  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://i.natgeofe.com/n/18708334-6fce-40b5-ade6-a7e2db7035f2/01-goldfish-nationalgeographic_1567132.jpg);">
    <div class="container">
      <h1>FishBnb : la <strong>passion</strong> des <strong>poissons</strong>!</h1>
      <h2>Découvre nos <strong><%= Poisson.count %></strong> fabuleux poissons à louer !</h2>
    </div>
  </div>


  <div class="cards">
    <% @poissons.each do |poisson| %>
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url(https://i.pinimg.com/1200x/c3/b2/08/c3b208e1cfa152f59d36f47a87c07578.jpg)">
        <div class="card-infos">
          <h2><strong><%= poisson.name %></strong></h2>
          <p>Votre <%= poisson.category %> pour seulement <strong><%= poisson.price %>€</strong> par jour !</p>
        </div>
        <div class="card-actions">
          <%= link_to "Supprimer 🍣", poisson_path(poisson),
            data: {turbo_method: :delete, turbo_confirm: "Are you sure?" },
            class: "ms-3 text-danger"
          %>
          <%= link_to "En savoir plus 🐟", poisson_path(poisson) %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%# background-color: #c3cbdc;
background-image: linear-gradient(147deg, #c3cbdc 0%, #edf1f4 74%); %>
