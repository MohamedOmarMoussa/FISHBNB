<div class="container text-center">
  <div class="row">
    <div class="fish booking col-7 p-5">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url(<%= @poisson.picture_url %>)">
        <div class="card-infos">
          <h2><strong><%= @poisson.name %></strong></h2>
          <p><%= @poisson.category %></p>
        </div>
      </div>
      <div class="card-description">
        <p><%= @poisson.description %></p>
        <p><strong>Propriétaire du poisson : <%= @poisson.user.prenom %></strong></p>
      </div>
    </div>
    <div class="col-1 p-5">
      <div>
      </div>
    </div>
    <div class="fish booking col-4 p-5">
      <h1>Réservez moi !</h1>
      <%= render 'locations/form', poisson: @poisson, location: @location %>
    </div>
  </div>
</div>
